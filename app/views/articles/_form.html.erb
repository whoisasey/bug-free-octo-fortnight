<div class="container">
  
  <div class="row d-flex justify-content-center">
    <div class="col-10">
      <% if @article.errors.any? %>

      <div class="alert alert-danger alert-dimissable fade show " role="alert">
        <h4 class="alert-heading">The following errors prevented the <%= @article.class.name.downcase %> from being saved</h4>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>

      <% end %>
      <%= form_with(model: @article, local: true, class:"shadow p-3 mb-3 bg-info rounded") do |f|%>
        <div class="form-group row mt-4">
            <%= f.label :title, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_field :title, class:"form-control shadow rounded", placeholder: "Title of Article" %>
            </div>
          </div>
          <div class="form-group row mt-4">
            <%= f.label :description, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= f.text_area :description, rows:10, class:"form-control shadow rounded", placeholder: "Description of Article" %>
            </div>
          </div>
      
          <div class="form-group row mt-4">
            <%= f.submit class:"btn btn-outline-light btn-lg" %>
          </div>
        </div>
      
      <% end %>
    </div>
  
  
  <div class="mb-4">
    <%= link_to '[ Cancel and Return to articles listing ]', articles_path, class: "d-flex justify-content-center text-info" %></div>
  </div>
</div>