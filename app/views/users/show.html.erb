<h1 class="display-4 text-center mt-4"><%= @user.username %>'s Profile</h1>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit Your Profile", edit_user_path(@user), class: 'btn btn-outline-info' %>
    <%= link_to "Delete Your Profile", user_path(current_user), data: { "turbo-method": :destroy, "turbo-confirm": "Are you sure?"}, class: 'btn btn-outline-danger'  %>
  </div>
<% end %>

